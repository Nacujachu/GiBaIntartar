<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent" tools:context="nthu.finbot.BotActivity">

    <ImageView
        android:id="@+id/BarIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="495dp"
        app:srcCompat="@drawable/main_menu_bar" />

    <Button
        android:id="@+id/BarButton"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/BarIV"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:onClick="pressBarButton" />

    <ImageView
        android:id="@+id/RiskIV"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        app:srcCompat="@drawable/bot_risk0"
        android:layout_below="@+id/BarButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="74dp" />
</RelativeLayout>